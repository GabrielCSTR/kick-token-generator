{
  "version": 2,
  "framework": null,
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs18.x"
    }
  },
  "outputDirectory": "client",
  "rewrites": [
    { "source": "/auth/login", "destination": "/api/server" },
    { "source": "/auth/callback", "destination": "/api/server" },
    { "source": "/auth/refresh", "destination": "/api/server" },
    { "source": "/(.*)", "destination": "/$1" }
  ]
}
